
style.



    html{
         font-size: 62.5%; 
    }

    img {
        border: none;
        -ms-interpolation-mode: bicubic;
        max-width: 100%; 
    }
    
    body {
        background-color: #f6f6f6;
        font-family: 'Plus Jakarta Sans', sans-serif;
        -webkit-font-smoothing: antialiased;
        font-size: 1.3rem;
        line-height: 1.4;
        margin: 0;
        padding: 0;
        -ms-text-size-adjust: 100%;
        -webkit-text-size-adjust: 100%; 
    }
    
    img {
        margin-bottom: 2.4rem;
    }

    table {
        border-collapse: separate;
        mso-table-lspace: 0pt;
        mso-table-rspace: 0pt;
        width: 100%; }
        table td {
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-size: 1.3rem;
            vertical-align: top; 
    }
    .body {
        background-color: #f6f6f6;
        width: 100%; 
    }
    .container {
        display: block;
        margin: 0 auto !important;
        /* makes it centered */
        max-width: 58rem;
        padding: 1rem;
        width: 58rem; 
    }
    .small{
        font-weight: 500;
        font-size: 1.1rem;
        line-height: 1.8rem;
    }
    .text-blue {
        color: #635FC7;
    }
    .content {
        box-sizing: border-box;
        display: block;
        margin: 0 auto;
        max-width: 46.1rem;
        height: 47.2rem;
        padding: .1rem.; 
    }
    .main {
        background: #ffffff;
        border-radius: .9rem;
        width: 100%; 
    }
    .wrapper {
        box-sizing: border-box;
        padding: 4rem; 
    }
    .content-block {
        padding-bottom: .1rem;
        padding-top: .1rem;
    }
    .footer {
        clear: both;
        margin-top: .1rem;
        text-align: center;
        width: 100%; 
    }
        .footer td,
        .footer p,
        .footer span,
        .footer a {
            color: #999999;
            font-size: 1.2rem;
            text-align: center; 
    }
    h1,
    h2,
    h3,
    h4 {
        color: #000000;
        font-family: 'Plus Jakarta Sans', sans-serif;
        font-weight: 400;
        line-height: 1.4;
        margin: 0;
        margin-bottom: 3.0rem; 
    }
    h1 {
        font-size: 3.5rem;
        font-weight: 400;
        text-align: center;
        text-transform: capitalize; 
    }
    p,
    ul,
    ol {
        font-family: 'Plus Jakarta Sans', sans-serif;
        font-size: 1.3rem;
        font-weight: 400;
        line-height: 2.3rem;
        margin: 0;
        margin-bottom: 1.5rem; 
    }
        p li,
        ul li,
        ol li {
            list-style-position: inside;
            margin-left: .5rem; 
    }
    a {
        color: #635FC7;
        text-decoration: underline; 
    }
    .btn {
        box-sizing: border-box;
        width: 100%; }
        .btn > tbody > tr > td {
            padding-bottom: 1.5rem; }
        .btn table {
            width: auto; 
    }
        .btn table td {
            background-color: #ffffff;
            text-align: center; 
    }
        .btn a {
            background-color: #ffffff;
            border: solid .1rem #635FC7;
            border-radius: 50rem !important;
            font-family: 'Plus Jakarta Sans', sans-serif;
            box-sizing: border-box;
            color: #635FC7;
            cursor: pointer;
            display: inline-block;
            font-size: 1.3rem;
            font-weight: 700;
            margin: 0;
            padding: 1rem 11rem;
            text-decoration: none;
            text-transform: capitalize; 
    }
    .btn-primary a {
        background-color: #635FC7;
        border-color: #635FC7;
        color: #ffffff; 
    }
    .last {
        margin-bottom: 0; 
    }
    .first {
        margin-top: 0; 
    }
    .align-center {
        text-align: center; 
    }
    .align-right {
        text-align: right; 
    }
    .align-left {
        text-align: left; 
    }
    .clear {
        clear: both; 
    }
    .mt0 {
        margin-top: 0; 
    }
    .mb0 {
        margin-bottom: 0; 
    }
    .preheader {
        color: transparent;
        display: none;
        height: 0;
        max-height: 0;
        max-width: 0;
        opacity: 0;
        overflow: hidden;
        mso-hide: all;
        visibility: hidden;
        width: 0; 
    }
    .powered-by a {
        text-decoration: none; 
    }
    hr {
        border: 0;
        border-bottom: .1rem solid #f6f6f6;
        margin: 2rem 0; 
    }
    @media only screen and (max-width: 620px) {
        table[class=body] h1 {
            font-size: 2.8rem !important;
            margin-bottom: 1rem !important; 
        }
        table[class=body] p,
        table[class=body] ul,
        table[class=body] ol,
        table[class=body] td,
        table[class=body] span,
        table[class=body] a {
            font-size: 1.6rem !important; 
        }
        table[class=body] .wrapper,
        table[class=body] .article {
            padding: 1rem !important; 
        }
        table[class=body] .content {
            padding: 0 !important; 
        }
        table[class=body] .container {
            padding: 0 !important;
            width: 100% !important; 
        }
        table[class=body] .main {
            border-left-width: 0 !important;
            border-radius: 0 !important;
            border-right-width: 0 !important; 
        }
        table[class=body] .btn table {
            width: 100% !important; 
        }
        table[class=body] .btn a {
            width: 100% !important; 
        }
        table[class=body] .img-responsive {
            height: auto !important;
            max-width: 100% !important;
            width: auto !important; 
        }
    }
    @media all {
        .ExternalClass {
            width: 100%; 
        }
        .ExternalClass,
        .ExternalClass p,
        .ExternalClass span,
        .ExternalClass font,
        .ExternalClass td,
        .ExternalClass div {
            line-height: 100%; 
        }
        .apple-link a {
            color: inherit !important;
            font-family: inherit !important;
            font-size: inherit !important;
            font-weight: inherit !important;
            line-height: inherit !important;
            text-decoration: none !important; 
        }
      
        .btn-primary a:hover {
            background-color: #A8A4FF !important;
            border-color: #A8A4FF !important; 
        } 
    }
